{% if cardinality == 1 %}
  // Preprocess {{ field_name }}.
  $image = NULL;
  if (!empty($vars['{{ field_name }}'])) {
    foreach ($vars['{{ field_name }}'] as $file) {
      $image = es_helper_get_image_data($file, array('src' => '{{ image_style }}'));
    }
  }
  $vars['{{ map }}'] = es_helper_make_image_tag($image);
{% else %}
  // Preprocess {{ field_name }}.
  $images = array();
  if (!empty($vars['{{ field_name }}'])) {
    foreach ($vars['{{ field_name }}'] as $file) {
      $image = es_helper_get_image_data($file, array('src' => '{{ image_style }}'));
      $images[] = es_helper_make_image_tag($image);
    }
  }
  $vars['{{ map }}'] = $images;
{% endif %}
