{% if cardinality == 1 %}
    // Preprocess {{ field_name }}.
    $image = NULL;
    if (!empty($vars['{{ field_name }}'])) {
      foreach ($vars['{{ field_name }}'] as $file) {
        $image = es_helper_get_image_data($file, array('src' => '{{ image_style }}'));
      }
    }
    $vars['{{ map }}'] = $image;
{% else %}
    // Preprocess {{ field_name }}.
    $images = array();
    if (!empty($vars['{{ field_name }}'])) {
      foreach ($vars['{{ field_name }}'] as $file) {
        $images[] = es_helper_get_image_data($file, array('src' => '{{ image_style }}'));
      }
    }
    $vars['{{ map }}'] = $images;
{% endif %}
